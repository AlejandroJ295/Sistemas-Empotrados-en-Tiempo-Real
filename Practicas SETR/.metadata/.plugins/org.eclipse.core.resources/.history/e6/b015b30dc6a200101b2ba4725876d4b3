void LedTAnimationTask(void * pargs){

	uint8_t nButtom = (uint8_t) pargs;

	while(1){
		switch (nButtom){

		}
	}
}

void CreateLedAnimationTask(){
	xTaskCreate(LedToggleTask, "LedToggleTask", 128, 1, 1, NULL);
	//xTaskCreate(LedToggleTask, "LedToggleTask", 128, 2, 1, NULL);
}

void animation1(){
	int i;
	LED_Off(0);
	for(i =0; i<10;i++){
		LED_Toggle(0);
		HAL_Delay(200);
		LED_Toggle(1);
		HAL_Delay(200);
	}
	LED_Off(0);
	LED_Off(1);
}

void animation2(){
	int i;
	LED_Off(0);
	for(i =0; i<10;i++){
		LED_Toggle(2);
		HAL_Delay(200);
		LED_Toggle(3);
		HAL_Delay(200);
	}
	LED_Off(2);
	LED_Off(3);
}
void animation3(){
	int i;
	LED_Off(0);
	for(i =0; i<10;i++){
		LED_Toggle(3);
		HAL_Delay(200);
		LED_Toggle(1);
		HAL_Delay(200);
	}
	LED_Off(3);
	LED_Off(1);
}
