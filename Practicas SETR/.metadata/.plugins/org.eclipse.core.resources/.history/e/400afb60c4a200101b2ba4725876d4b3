#include "LedTask.h"

void LedToggleTask(void * pargs){

	uint8_t nLed = (uint8_t) pargs;

	while(1){
		/*
		switch(nLed){
		case 1:
			LED_Toggle(nLed);
			vTaskDelay(200);
			break;
		case 2:
			LED_Toggle(nLed);
			vTaskDelay(300);
			break;
		}
		*/

		for(int i = 0; i < 5; i++){
			LED_Toggle(nLed);
			vTaskDelay(200);
		}
		xTaskCreate(LedToggleTask, "LedToggleTask", 128, 2, 1, NULL);
		vTaskDelete(NULL);
	}
}

void CreateLedTask(){
	xTaskCreate(LedToggleTask, "LedToggleTask", 128, 1, 1, NULL);
	//xTaskCreate(LedToggleTask, "LedToggleTask", 128, 2, 1, NULL);
}

