#include "stm32l4xx_hal.h"

#include "FreeRTOS.h"
#include "task.h"

#include "led_driver.h"
#include "joy_driver.h"

void LedToggleTask(void * pargs){
	while(1){
		LED_Toggle(0);
		vTaskDelay(200);
	}
}

void CreateLedTask(){
	xTaskCreate(LedToggleTask, "LedToggleTask", 128, NULL, 1, NULL);
}

